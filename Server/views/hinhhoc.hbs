<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/stylesheets/hinhhoc.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Document</title>
</head>

<body>
    <div class="container-fluid">
        <div class="w-50 p-3 " style="margin-left: 29%;">
            <p id="width">
                Chiều dài:&nbsp {{b}}
            </p>
            <p id="height">
                Chiều rộng:&nbsp {{a}}
            </p>
            <p id="kq">
                Diện tích: &nbsp {{kq}} &nbsp cm2
            </p>
            <canvas id="myCanvas" width="340" height="260"
                style="border:3px solid #fdfdfd; display:flexbox; justify-content:center align-items:center">
        </div>
    </div>
    <script>
        // Khai bao thong so hinh
        const hinh = "{{hinh}}";

        var a = {{ a }};
        var b = {{ b }};
        var r = {{ kq }}
        // khai bao canvas
        var c = document.getElementById("myCanvas");
        // Doi chu
        var w = document.getElementById("width");
        var h = document.getElementById("height");
        var kq = document.getElementById("kq");

        var ctx = c.getContext("2d");
        console.log(hinh);

        // ve canvas
        if (hinh == "chunhat") {
            kq.innerHTML = "Diện tích hình chữ nhật là:  chiều dài * chiều rộng = " + b + " * " + a + " = " + r;

            ctx.beginPath();
            ctx.rect(20, 20, 10 * a, 8 * b);
            ctx.stroke();
        } else if (hinh == "tron") {
            h.innerHTML = "Số PI: " + Math.PI;
            w.innerHTML = "Bán kính: " + a;
            kq.innerHTML = "Diện tích hình tròn là: \n r^2 (Đường kính) * Số Pi = " + a + " * " +  Math.PI + " = " + r;

            ctx.beginPath();
            ctx.arc(150, 150, a, 0, 2 * Math.PI);
            ctx.stroke();
        }
    </script>
</body>

</html>
